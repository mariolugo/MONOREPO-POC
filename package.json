{
  "name": "belong",
  "version": "1.0.0",
  "private": true,
  "repository": "",
  "author": "BELONG",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:tailwind": "cross-env NODE_ENV=development yarn workspace @belong/ui build:tailwind",
    "clean": "tsc -b tsconfig.build.json --clean",
    "story": "yarn workspace @belong/app run storybook",
    "watch": "tsc -b tsconfig.build.json --watch",
    "prestart": "tsc -b tsconfig.build.json && yarn build:tailwind",
    "start": "yarn prestart && concurrently -k \"yarn workspace @belong/app dev\" \"yarn workspace @belong/ui storybook --quiet\"",
    "start:sb": "yarn workspace @belong/ui run storybook",
    "start:app": "yarn workspace @belong/app run dev",
    "format": "prettier --write ",
    "lint": "eslint --ext ts --ext tsx --fix-dry-run",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.+(js|jsx|ts|tsx|json)": [
      "yarn lint",
      "yarn format"
    ],
    "package.json": "sort-package-json",
    "*.{ts,tsx}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@tailwindcss/postcss7-compat": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-testing-library": "^4.1.2",
    "husky": "^6.0.0",
    "lint-staged": "^10.2.2",
    "plop": "^2.7.4",
    "plop-helper-date": "^1.0.0",
    "plop-helper-git-config": "^1.0.0",
    "postcss": "7.0.35",
    "postcss-loader": "3.0.0",
    "postcss-nested": "4.2.3",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "prettier-plugin-tailwind": "^2.2.10",
    "sort-package-json": "^1.49.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.4",
    "tailwindcss-scrollbar": "^0.1.0",
    "ts-jest": "^26.5.5",
    "tsc-watch": "^4.2.9",
    "watch-cli": "^0.2.3"
  }
}
